# 应用配置
APP_NAME="CV Studio"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT="development"

# 服务器配置
HOST=0.0.0.0
PORT=8000
RELOAD=true

# 数据库配置
DATABASE_URL="sqlite:///./cvstudio.db"

# JWT认证配置
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 日志配置
LOG_LEVEL="DEBUG"
LOG_FILE="./logs/app.log"

# 文件存储配置（统一使用 backend/data/ 目录）
UPLOAD_DIR="./data/uploads"
DATASETS_DIR="./data/datasets"
MODELS_DIR="./data/models"
CHECKPOINTS_DIR="./data/checkpoints"
TEMP_DIR="./data/temp"
MAX_UPLOAD_SIZE=104857600  # 100MB

# 训练配置
DEFAULT_TRAINING_DEVICE="cpu"
MAX_TRAINING_PROCESSES=2
TRAINING_TIMEOUT=3600  # 1小时

# Redis配置（用于任务队列）
REDIS_URL="redis://localhost:6379/0"

# CORS配置
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# API配置
API_V1_STR="/api/v1"
PROJECT_NAME="CV Studio API"

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 缓存配置
CACHE_TTL=3600  # 1小时

# 图像处理配置
MAX_IMAGE_SIZE=4096
THUMBNAIL_SIZE=256
SUPPORTED_IMAGE_FORMATS=["jpg", "jpeg", "png", "bmp", "tiff"]
SUPPORTED_DATASET_FORMATS=["yolo", "coco", "voc", "classification"]

# 性能监控
ENABLE_METRICS=true
METRICS_PORT=9090